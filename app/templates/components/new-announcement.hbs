{{#if addNewAnnouncement}}
  <h1>New announcement</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="subject">Subject</label>
          {{input value=subject id="subject"}}
        </div>
        <div class="form-group">
          <label for="body">Body</label>
          {{textarea value=body id="body"}}
        </div>
        <button {{action 'save4'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
